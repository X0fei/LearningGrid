<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LearningGrid.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="LearningGrid.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="LearningGrid">

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainWindowViewModel/>
	</Design.DataContext>
		<StackPanel Background="PeachPuff">
			<Image
				Name="Background"
				Source="/Assets/background.jpg">
			</Image>
			<Border
				Margin="5"
				CornerRadius="10"
				Background="SandyBrown">
				<TextBlock
					Margin="5"
					FontSize="24"
					HorizontalAlignment="Center"
					Text="Sign Up Form">
				</TextBlock>
			</Border>
			<Image
				   Name="Triangle"
				   Margin="20"
				   Width="100"
				   Height="100"
				   Source="/Assets/impossible_triangle.png">
			</Image>
			<Grid
				ColumnDefinitions="120, 195"
				RowDefinitions="Auto, Auto, Auto, Auto, Auto"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<Border
					Grid.Row="0" Grid.Column="0"
					Margin="3 10"
					CornerRadius="10"
					Background="BurlyWood">
					<TextBlock
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="Login">
					</TextBlock>
				</Border>
				<TextBox Grid.Row="0" Grid.Column="1" Margin="10 10" Name="login"/>
				<Border
					Grid.Row="1" Grid.Column="0"
					Margin="3 10"
					CornerRadius="10"
					Background="BurlyWood">
					<TextBlock
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="Password">
					</TextBlock>
				</Border>
				<TextBox Grid.Row="1" Grid.Column="1" Margin="10 10" Name="password"/>
				<Border
					Grid.Row="2" Grid.Column="0"
					Margin="3 10"
					CornerRadius="10"
					Background="BurlyWood">
					<TextBlock
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="Confirm Pass">
					</TextBlock>
				</Border>
				<TextBox Grid.Row="2" Grid.Column="1" Margin="10 10" Watermark="Passwords must match" Name="conformPassword"/>
				<Border
					Grid.Row="3" Grid.Column="0"
					Margin="3 5"
					CornerRadius="10"
					Background="BurlyWood">
					<TextBlock
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Text="Gender">
					</TextBlock>
				</Border>
				<RadioButton
					Grid.Row="3"
					Grid.Column="1"
					VerticalAlignment="Top"
					Margin="9 0 0 0"
					GroupName="Gender"
					Content="None"
					Name="none">
				</RadioButton>
				<RadioButton
					Grid.Row="3"
					Grid.Column="1"
					Margin="9 50 0 0"
					GroupName="Gender"
					Content="Male"
					Name="male">
				</RadioButton>
				<RadioButton
					Grid.Row="3"
					Grid.Column="1"
					Margin="9 0 0 0"
					GroupName="Gender"
					Content="Female"
					Name="female">
				</RadioButton>
			</Grid>
			<Button Margin="0 15" HorizontalAlignment="Center" Click="RegisterConfirm">Register</Button>
		</StackPanel>
</Window>